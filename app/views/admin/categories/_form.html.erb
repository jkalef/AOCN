
  <%= simple_form_for [:admin, @category] do |f| %>
    <%= f.input :name %>
    <br>
    <%= f.simple_fields_for :items do |i| %>
      <%= render "item_fields", f: i %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "Add Item", f, :items, class: "btn btn-primary" %>
    </div>
    <br>
    <%= f.submit %>
  <% end %>
